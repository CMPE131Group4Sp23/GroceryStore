<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=1600, maximum-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="large.css" />
    <link rel="stylesheet" type="text/css" href="styleguide.css" />
    <link rel="stylesheet" type="text/css" href="globals.css" />
  </head>
  <body style="margin: 0; background: #ffffff">
    <input type="hidden" id="anPageName" name="page" value="large" />
    <div class="container-center-horizontal">
      <div class="large screen">
        <div class="flex-row-1 sfpro-bold-fruit-salad-32px">
          <div class="header-copy">
            <img
              class="bitmap-1"
              src="icon.png"
              alt="Bitmap"
            />
            <div class="overlap-group-2">
              <h1 class="title">Welcome to BAYMART</h1>
              <div class="hi-krishna">Hi, <%= name %></div>
            </div>
          </div>
          <div class="cart"><a href="/cart">Cart</a></div>
          <form action="/logout" method="POST" class="logout-form">
            <button type="submit" class="logout">Logout</button>
          </form>
        </div>
        <div class="flex-col flex">
          <div class="banners">
            <div class="banner">
              <div class="order-your-favorite sfpro-bold-black-37px">Order your favorite groceries</div>
              <div class="overlap-group">
                <p class="x50-off-on-first-fiv sfpro-bold-fruit-salad-24px">50% off on first five orders</p>
                <img class="bitmap" src="large-bitmap-185FAA75-8388-44D8-9F11-7FB1C355A284.png" alt="Bitmap" />
              </div>
            </div>
            <div class="banner">
              <div class="order-your-favorite sfpro-bold-black-37px">Order your favorite groceries</div>
              <div class="overlap-group">
                <p class="x50-off-on-first-fiv sfpro-bold-fruit-salad-24px">50% off on first five orders</p>
                <img class="bitmap" src="large-bitmap-185FAA75-8388-44D8-9F11-7FB1C355A284.png" alt="Bitmap" />
              </div>
            </div>
          </div>
          <div class="product-card-container">
            <% for (var i = 0; i < productList.length; i++) { %>
              <% for (var j = 0; j < productList[i].length; j++) { %>
                <div class="product-card">
                  <div class="flex-row flex">
                    <div class="apple-container">
                      <div class="apple sfpro-bold-fruit-salad-40px"><%= productList[i][j].Prod_Name %></div>
                      <img
                        class="apple-image"
                        src="<%= productList[i][j].Image_Path %>"
                        alt="Product Image"
                      />
                    </div>
                    <div class="overlap-group-1"><div class="price sfpro-bold-fruit-salad-32px">$<%= (productList[i][j].Price/100).toFixed(2) %></div></div>
                  </div>
                  <form action="/cart/additem" method="post" target="dummyFrame" class="add-to-cart sfpro-semi-bold-black-28px">
                    <input type="hidden" name="productid" value="<%= productList[i][j].Product_ID %>">
                    <input type="submit" class="add-to-cart-1" value="Add to cart">
                    <div class="group-3">
                      <div class="text text-2">-</div>
                      <input type="number" class="number" id="quantity" name="quantity" min="1" max="20" value="1">
                      <div class="text-2">+</div>
                    </div>
                  </form>
                </div>
              <% } %>
            <% } %>
            </div>
        </div>
      </div>
    </div>
  </body>
</html>